@page "/account"
@using AuthClient.Client.Pages.Content.Components

<div class="mt-3">
    <MainTitle Title="Информация об аккаунте" Description="Настройки аккаунта" />
</div>

<MudTabs Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6">
    @if (_canViewUsers)
    {
        <MudTabPanel Text="Мой профиль">
            <Profile />
        </MudTabPanel>
    }
    @if (_canViewTokens)
    {
        <MudTabPanel Text="История входов">
            <EntryHistory />
        </MudTabPanel>
    }
</MudTabs>